@model IEnumerable<AvatarAssignment_2MVC.Models.Fighter>

<div class="container p-6">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Fighters List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Fighters" asp-action="Create" class="btn btn-primary">Add New Fighter</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Bender Name
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Weapon
                    </th>
                    <th>
                        Fighting Styles
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var fighter in Model)
                {
                <tr>
                    <td width="25%">@fighter.BenderName</td>
                    <td width="25%">@fighter.City</td>
                    <td width="30%">@fighter.Weapon</td>
                    <td width="30%">@fighter.FightingStyles</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Fighters" asp-action="Update" asp-route-ID="@fighter.ID" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Fighters" asp-action="Delete" asp-route-ID="@fighter.ID" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No fighters added yet</p>
    }
</div>
