@model IEnumerable<AvatarAssignment_2MVC.Models.Fighter>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Fighters List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Fighter" asp-action="Create" class="btn btn-primary">Add New Fighter</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Bender Name
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Weapon
                    </th>
                    <th>
                        FightingStyles
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var fighter in Model)
                {
                <tr>
                    <td width="30%">@fighter.BenderName</td>
                    <td width="30%">@fighter.City</td>
                    <td width="30%">@fighter.Weapon</td>
                    <td width="30%">@fighter.FightingStyles</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No fighters added yet</p>
    }
</div>
